# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Session
SESSION_SECRET=your_session_secret_min_32_chars_long

# Database
DATABASE_URL="mysql://root:password@localhost:3306/github_global"

# Redis
REDIS_URL=redis://localhost:6379

# Encryption
ENCRYPTION_KEY=your_32_char_encryption_key

# OpenRouter (Platform managed)
OPENROUTER_API_KEY=sk-or-v1-xxxxx
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=GitHub Global

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# GitHub App Configuration
# Private key path (relative to project root or absolute path)
GITHUB_APP_PRIVATE_KEY_PATH=private-key.pem
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_WEBHOOK_SECRET=your_webhook_secret
